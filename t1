<script>
document.getElementById('quizForm').addEventListener('submit', function (e) {
  e.preventDefault();

  let correct = 0;
  const answers = {
    q1: 'a',
    q2: 'b',
    q3: 'b',
    q4: ['3,5', '5,3', 'x=3,x=5', 'x=5,x=3'], // accepting different formats
    q5: ['x^2+3x-10', 'x¬≤+3x-10'],
    q6: ['16', 'D=16']
  };

  const form = e.target;

  if (form.q1.value === answers.q1) correct++;
  if (form.q2.value === answers.q2) correct++;
  if (form.q3.value === answers.q3) correct++;

  const q4 = form.q4.value.replace(/\s/g, '').toLowerCase();
  if (answers.q4.some(a => q4.includes(a))) correct++;

  const q5 = form.q5.value.replace(/\s/g, '').toLowerCase();
  if (answers.q5.some(a => q5.includes(a))) correct++;

  const q6 = form.q6.value.replace(/\s/g, '').toLowerCase();
  if (answers.q6.some(a => q6.includes(a))) correct++;

  document.getElementById('result').textContent = `–í–∞—à —Ä–µ–∑—É–ª—å—Ç–∞—Ç: ${correct} —ñ–∑ 6`;
});
</script>

